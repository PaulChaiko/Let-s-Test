<Window x:Class="Let_s_Test.TestingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Let_s_Test"
        mc:Ignorable="d"
        Title="Testing" Height="550" Width="500">

    <Window.Background>
        <ImageBrush ImageSource="/Images/Back.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBox x:Name="QBox" IsReadOnly="True" Margin="10,10,10,10" FontSize="18" TextWrapping="Wrap"></TextBox>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Button x:Name="B1" Margin="10,10,10,10" Content="1" FontSize="36" VerticalAlignment="Center" Click="B1_Click"/>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0">
                <Button x:Name="B2" Margin="10,10,10,10" Content="2" FontSize="36" VerticalAlignment="Center" Click="B2_Click"/>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="0">
                <Button x:Name="B3" Margin="10,10,10,10" Content="3" FontSize="36" VerticalAlignment="Center" Click="B3_Click"/>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="0">
                <Button x:Name="B4" Margin="10,10,10,10" Content="4" FontSize="36" VerticalAlignment="Center" Click="B4_Click"/>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1">
                <TextBox x:Name="T1" Margin="10,10,10,10" IsReadOnly="True" FontSize="14" TextWrapping="Wrap"></TextBox>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1">
                <TextBox x:Name="T2" Margin="10,10,10,10" IsReadOnly="True" FontSize="14" TextWrapping="Wrap"></TextBox>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="1">
                <TextBox x:Name="T3" Margin="10,10,10,10" IsReadOnly="True" FontSize="14" TextWrapping="Wrap"></TextBox>
            </Grid>

            <Grid Grid.Row="3" Grid.Column="1">
                <TextBox x:Name="T4" Margin="10,10,10,10" IsReadOnly="True" FontSize="14" TextWrapping="Wrap"></TextBox>
            </Grid>

        </Grid>

    </Grid>
</Window>
